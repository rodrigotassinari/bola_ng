#single_container
  #single_header
    %h2 Login

  #single_content
    - form_for @user_session, :url => user_session_path do |f|
      = f.error_messages
      %p
        = f.label :login
        = f.text_field :login
      %p
        = f.label :password, "Senha"
        = f.password_field :password
      %p
        = f.check_box :remember_me
        = f.label :remember_me, "Lembrar de mim?"
      %p
        = f.submit "Entrar"
