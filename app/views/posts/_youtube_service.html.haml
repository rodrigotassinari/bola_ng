#single_header
  %h3.post{:style => "background: white url(#{post.service.icon_url}) 0 center no-repeat"}
    == Eu #{t post.service_action} no #{link_to post.service.name, lifestream_path(post.service)}:
  %h2= post.title
  %p
    - if post.published?
      = relative_published_date(post.published_at)
    - else
      %strong NÃƒO PUBLICADO
    |
    = link_to 'Visitar', post.url

#single_content
  %p
    %object{:width => "480", :height => "360"}
      %param{:name => "movie", :value => "http://www.youtube.com/v/#{post.identifier}&hl=pt_BR&fs=1&rel=0"}
      %param{:name => "allowFullScreen", :value => "true"}
      %param{:name => "allowscriptaccess", :value => "always"}
      %embed{:src => "http://www.youtube.com/v/#{post.identifier}&hl=pt_BR&fs=1&rel=0", :type => "application/x-shockwave-flash", :allowscriptaccess => "always", :allowfullscreen => "true", :width => "480", :height => "360"}
  
  %p= auto_link(post.summary)

