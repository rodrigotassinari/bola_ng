/ begin conditional content
%li.item.blipfm{:class => "#{last ? 'last' : nil} #{post.published? ? nil : 'unpublished'}"}
  %p.site_info{:style => "background: white url(#{post.service.icon_url}) 3px center no-repeat"}
    == Eu #{t post.service_action} no
    = link_to post.service.name, lifestream_path(post.service)
  .item_inner
    / domain-specific boxes
    .inner_container
      .blip_player
        %object{:type => "application/x-shockwave-flash", :allowScriptAccess => "never", :allowNetworking => "internal", :height => "240", :width => "221", :align => "middle", :data => "http://blip.fm/_/swf/BlipEmbedPlayer.swf"}
          %param{:name => "allowScriptAccess", :value => "never"}
          %param{:name => "allowNetworking", :value => "internal"}
          %param{:name => "movie", :value => "http://blip.fm/_/swf/BlipEmbedPlayer.swf"}
          %param{:name => "quality", :value => "high"}
          %param{:name => "play", :value => "true"}
          %param{:name => "loop", :value => "false"}
          %param{:name => "wmode", :value => "transparent"}
          %param{:name => "flashvars", :value => "blipId=#{post.identifier}"}
  %p.date
    - if post.published?
      = relative_published_date(post.published_at)
    - else
      %strong NÃƒO PUBLICADO
    |
    = link_to 'Visitar', post.url
    = link_to 'Permalink', post_path(post), :class => 'quiet'

